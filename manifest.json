{
    "name": "Color Picker",
    "description": "A color picker extension",
    "version": "1.0",
    "manifest_version": 3,
    "background":{
        "service_worker": "background.js"
    },
    
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],

    "icons":{
        "48":"/images/logo.png"
    },

    "action":{
        "default_popup": "popup.html"
    }
} 